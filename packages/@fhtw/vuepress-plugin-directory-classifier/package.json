{
  "name": "@fhtw/vuepress-plugin-directory-classifier",
  "version": "0.0.0",
  "description": "Vuepress plugin for directory based classification",
  "author": "Alija Sabic <sabic.alija@gmail.com>",
  "homepage": "https://github.com/sabicalija/webdev.js#readme",
  "license": "GPL-3.0",
  "main": "lib/node/index.js",
  "directories": {},
  "files": [
    "lib",
    "types"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabicalija/webdev.js.git",
    "path": "packages/@fhtw/vuepress-plugin-directory-classifier"
  },
  "scripts": {
    "dev": "concurrently \"npm:dev:client\" \"npm:dev:node\" \"npm:build:components\"",
    "build": "concurrently \"npm:build:client\" \"npm:build:node\" \"npm:build:components\"",
    "dev:client": "tsc -p tsconfig.client.json --watch",
    "dev:node": "tsc -p tsconfig.node.json --watch",
    "build:client": "tsc -p tsconfig.client.json",
    "build:node": "tsc -p tsconfig.node.json",
    "build:components": "mkdir -p lib/client/components && cp -r src/client/components lib/client"
  },
  "bugs": {
    "url": "https://github.com/sabicalija/webdev.js/issues"
  },
  "devDependencies": {
    "@vuepress/shared-utils": "^1.0.4",
    "concurrently": "^4.1.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.2",
    "xo": "^0.24.0"
  },
  "xo": {
    "extends": [
      "rem",
      "plugin:prettier/recommended",
      "xo-typescript"
    ],
    "extensions": [
      "ts"
    ],
    "rules": {}
  },
  "gitHead": "896c5ef47d077abe8b9c52eaadad504865ca01c8"
}
